#!/usr/bin/hush

function Draw()
end

function BspcSubscribe()
  let event = nil
  return @[
    next: function() 
      event = ${ bspc subscribe node_add node_remove desktop_focus node_swap -c 1 }
      return std.type(event) != "error"
    end,
    stdout: function() return event.stdout end,
  ]
end

let events = BspcSubscribe()
let i = 0

while events.next() do
  std.print(std.to_string(i) ++ ") " ++ std.trim(events.stdout()))
  i = i + 1
end

